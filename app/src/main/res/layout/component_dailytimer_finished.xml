<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:grid="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_margin="32dp">
    
    <TextView
            android:id="@+id/text_dailytimer_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Daily encerrada!"/>
    
    <Space android:layout_width="match_parent" android:layout_height="32dp"/>
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Seu tempo"/>
    
    <TextView
            android:id="@+id/text_dailytimer_yourtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30dp"
            android:text="0:00"
            android:gravity="center"/>
    
    <Space android:layout_width="match_parent" android:layout_height="16dp"/>
    
    <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            grid:alignmentMode="alignBounds"
            grid:columnCount="3"
            grid:rowOrderPreserved="false"
            grid:useDefaultMargins="true">
        
        <!--Última Daily-->
        
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:textStyle="bold"
                android:text="Anterior"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:text="3:20"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="-10%"/>
        
        <!--Últimas 5 Dailies-->
        
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:textStyle="bold"
                android:text="Últimas 5"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:text="5:20"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red_500"
                android:text="+20%"/>
        
        <!--Todas-->
        
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:textStyle="bold"
                android:text="Todas"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:text="5:20"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red_500"
                android:text="+20%"/>
    
    </android.support.v7.widget.GridLayout>
    
    <Space android:layout_width="match_parent" android:layout_height="32dp"/>
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Time"/>
    
    <TextView
            android:id="@+id/text_dailytimer_dailytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30dp"
            android:text="0:00"
            android:gravity="center"/>
    
    <Space android:layout_width="match_parent" android:layout_height="16dp"/>
    
    <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            grid:alignmentMode="alignBounds"
            grid:columnCount="3"
            grid:rowOrderPreserved="false"
            grid:useDefaultMargins="true">
        
        <!--Última Daily-->
        
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:textStyle="bold"
                android:text="Anterior"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:text="3:20"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="-10%"/>
        
        <!--Últimas 5 Dailies-->
        
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:textStyle="bold"
                android:text="Últimas 5"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:text="5:20"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red_500"
                android:text="+20%"/>
        
        <!--Todas-->
        
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:textStyle="bold"
                android:text="Todas"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:text="5:20"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red_500"
                android:text="+20%"/>
    
    </android.support.v7.widget.GridLayout>

</LinearLayout>