<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.timer.TimerActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que você fez?"/>

    <EditText
            android:id="@+id/edit_timer_whatyoudid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="O que você fez?"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que você vai fazer?"/>

    <EditText
            android:id="@+id/edit_timer_whatyouwilldo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="O que você vai fazer?"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Impedimentos?"/>

    <EditText
            android:id="@+id/edit_timer_difficulties"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="impedimentos?"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:orientation="horizontal">

        <Chronometer
                android:id="@+id/chronometer_timer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"/>

        <Button
                android:id="@+id/button_timer_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Salvar"/>

        <Button
                android:id="@+id/button_timer_startorpause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"/>

    </LinearLayout>

</LinearLayout>
