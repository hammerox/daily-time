<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textViewStyle">@style/MontserratTextViewStyle</item>
        <item name="android:editTextStyle">@style/MontserratEditTextViewStyle</item>
    </style>
    
    <style name="MontserratTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    
    <style name="MontserratEditTextViewStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    
    <style name="RoundedButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="mfb_borderColor">#FFFFFF</item>
        <item name="mfb_borderWidth">1dp</item>
        <item name="mfb_defaultColor">@color/colorPrimary</item>
        <item name="mfb_focusColor">@color/colorPrimaryDark</item>
        <item name="mfb_radius">30dp</item>
        <item name="mfb_textColor">#FFFFFF</item>
        <item name="mfb_text">@string/empty_string</item>
    </style>
    
    <style name="RoundedButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
